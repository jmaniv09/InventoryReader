<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.decathlon.inventoryreader.Fragments.ReadQRFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000000"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3.5"
            android:src="@drawable/unnamed" />

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="@drawable/button_selector"
            android:onClick="launchQRScanner"
            android:text="@string/scan_only_qr_codes" />

        <Button
            android:id="@+id/devices_btn"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.8"
            android:background="@drawable/button_selector"
            android:onClick="getAllDevices"
            android:text="Todos los dispositivos" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

</FrameLayout>
